<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/img_portrait"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_square" />

    <TextView
        android:id="@+id/label_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/img_portrait"
        android:padding="2dp"
        android:text="Name:"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/input_name"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/label_name"
        android:padding="2dp"
        android:text="Igor"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/label_birthday"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/img_portrait"
        android:padding="2dp"
        android:text="Birthday:"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/input_birthday"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/label_birthday"
        android:padding="2dp"
        android:text="June 94"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/label_gender"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_birthday"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/img_portrait"
        android:padding="2dp"
        android:text="Gender:"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/input_gender"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_birthday"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/label_gender"
        android:padding="2dp"
        android:text="23"
        android:textColor="#FFF" />

</RelativeLayout>