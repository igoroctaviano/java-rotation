<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exercices.igoroctaviano.secondexercise.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="181dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp">

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:id="@+id/separator"
            android:visibility="visible"
            android:background="@android:color/darker_gray"/>

        <ImageView
            android:id="@+id/img_portrait"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/label_name"
            android:padding="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:layout_toRightOf="@+id/img_portrait"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Name:" />

        <TextView
            android:id="@+id/input_name"
            android:padding="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_width="130dp"
            android:layout_toRightOf="@+id/label_name"
            android:background="#F888"
            android:textColor="#FFF"
            android:text="Igor" />

        <TextView
            android:id="@+id/label_birthday"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/img_portrait"
            android:textAlignment="center"
            android:layout_below="@+id/label_name"
            android:textStyle="bold"
            android:text="Birthday:" />

        <TextView
            android:id="@+id/input_birthday"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_width="130dp"
            android:layout_below="@+id/input_name"
            android:layout_toRightOf="@+id/label_birthday"
            android:background="#F888"
            android:padding="2dp"
            android:textColor="#FFF"
            android:text="June 94" />

        <TextView
            android:id="@+id/label_gender"
            android:padding="2dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/label_birthday"
            android:layout_toRightOf="@+id/img_portrait"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Gender:" />

        <TextView
            android:id="@+id/input_gender"
            android:padding="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_width="130dp"
            android:layout_below="@+id/input_birthday"
            android:layout_toRightOf="@+id/label_gender"
            android:background="#F888"
            android:textColor="#FFF"
            android:text="23" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
